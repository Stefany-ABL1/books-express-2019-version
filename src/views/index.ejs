<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Agenda Telefónica</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link rel="stylesheet" href="/css/style.css">




</head>
<script src="/js/script.js"></script>

<div class="container box">
  <h1 class="display-4 titulo">AGENDA TELEFONICA</h1>
  <form>
    <div class="container box-content " >

      <input type="button"  class="btn btn-info" value="Agregar Contacto" name="B1" OnClick="location.href='http://localhost:5000/add'">
      <input type="button"  class="btn btn-info" value="Actualizar Contacto" name="B2" OnClick="location.href='http://localhost:5000/Actualizar'">
      <input type="button"  class="btn btn-info" value="Eliminar Contacto" name="B3" OnClick="location.href='http://localhost:5000/delete'">




    </div>
    <br>
    <div class="container box-content">
      <table class="table table-sm">
        <thead >
        <tr>
        <th  class="table-primary"> Nombre </th>
        <th class="table-secondary"> Organización </th>
        <th class="table-success"> Tipo de Celular </th>
        <th class="table-danger">Número Telefónico</th>
        <th  class="table-warning"> Tipo de Correo </th>
        <th class="table-info"> Correo </th>
          <th  class="table-danger"> Dirección   </th>
        <th class="table-dark"> Fecha de Cumpleaños </th>
        <th  class="table-primary"> Relación  </th>
        </tr >


        </thead>
        <% contacts.forEach(function(contact) { %>

        <tr>
          <td> <%= contact.nombre%></td>
          <td><%= contact.organizacion%></td>
          <td><%= contact.cel%></td>
          <td><%= contact.numCel%></td>
          <td><%= contact.correo%></td>
          <td><%= contact.mail%></td>
          <td><%= contact.direccion%></td>
          <td><%= contact.fecha%></td>
          <td><%= contact.relacion%></td>
        </tr>
        <%})%>
        <tbody id="tblBody">

        </tbody>

      </table>
    </div>


  </form>
</div>
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.bundle.js"></script>

</body>

</html>
